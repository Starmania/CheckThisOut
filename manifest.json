{
  "manifest_version": 3,
  "name": "CheckThisOut",
  "description": "Quickly check the current page against W3C, Schema.org, and other web standards validators.",
  "version": "1.0.0",
  "action": {
    "default_title": "CheckThisOut",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "@check-this-out",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
